@using System.Globalization
@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product Details</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> &nbsp; Back to List
            </a>
        </div>
    </div>
    <br /><br />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ProductImage))
                    {
                        <img src="@Model.ProductImage" class="img-fluid rounded-start" alt="@Model.Name" />
                    }
                    else
                    {
                        <span class="text-muted">No Image</span>
                    }
                </div>
                <div class="col-md-8">
                    <h4 class="card-title">@Model.Name</h4>
                    <p class="card-text">@Model.Description</p>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong>Type:</strong> @Model.ProductType</li>
                        <li class="list-group-item"><strong>Price:</strong> @Model.Price.ToString("C0", CultureInfo.GetCultureInfo("vi-VN"))</li>
                        <li class="list-group-item"><strong>Quantity in Stock:</strong> @Model.Quantity</li>
                    </ul>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.ProductID" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>