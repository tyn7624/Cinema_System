@model MovieDetailVM
@{
    ViewData["Title"] = "Đặt Vé Xem Phim";
}

<div class="container mt-4">
    <div class="row">
        <!-- Cột trái: Thông tin người đặt -->
        <div class="col-md-6">
            <h3>Thông Tin Người Đặt</h3>
            <form id="bookingForm">
                <div class="mb-3">
                    <label class="form-label">Họ và Tên</label>
                    <input type="text" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Số Điện Thoại</label>
                    <input type="tel" class="form-control" required>
                </div>

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="ageCheck" required>
                    <label class="form-check-label" for="ageCheck">
                        Đảm bảo mua vé đúng số tuổi quy định.
                    </label>
                </div>

                <div class="form-check mt-2">
                    <input class="form-check-input" type="checkbox" id="termsCheck" required>
                    <label class="form-check-label" for="termsCheck">
                        Đồng ý với <a href="#">điều khoản của Cinema</a>.
                    </label>
                </div>

                <button type="submit" class="btn btn-primary mt-3">Đặt Vé</button>
            </form>
        </div>

        <!-- Cột phải: Danh sách Food và Thông tin vé -->
        <div class="col-md-6">
            <h3>Thông Tin Vé</h3>
            <ul class="list-group">
                <li class="list-group-item">Phim: <span id="movie-title">Đang tải...</span></li>
                <li class="list-group-item">Rạp: <span id="cinema-name">Đang tải...</span></li>
                <li class="list-group-item">Giờ Chiếu: <span id="show-time">Đang tải...</span></li>
                <li class="list-group-item">Ghế: <span id="selected-seats">Đang tải...</span></li>
                <li class="list-group-item">Giá: <span id="ticket-price">Đang tải...</span></li>
            </ul>

            <h3 class="mt-4">Chọn Thức Ăn</h3>
            <ul class="list-group" id="food-list">
                <li class="list-group-item">Đang tải...</li>
            </ul>

            <h3 class="mt-4">Tổng Tiền</h3>
            <p><strong id="total-price">Đang tính...</strong></p>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/InformationTicket.js"></script>
}

