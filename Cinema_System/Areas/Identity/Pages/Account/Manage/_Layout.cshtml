@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout != null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Views/Shared/_Layout.cshtml";
    }
}
<style>

    body {
        background: radial-gradient(circle at center, #001f3f, #000);
        color: white;
        font-family: 'Orbitron', sans-serif;
        overflow: hidden;
    }

        /* Animated Stars */
        body::before {
            content: "";
            position: absolute;
            width: 100%;
            height: 100%;
            background: url('https://www.transparenttextures.com/patterns/stardust.png');
            opacity: 0.1;
            z-index: -1;
        }

    /* Neon Glow Card */
    .neon-card {
        border: none;
        border-radius: 15px;
        background: rgba(0, 0, 0, 0.85);
        box-shadow: 0 0 15px rgba(0, 153, 255, 0.8);
        padding: 20px;
        margin-bottom: 20px;
    }

    /* Sci-Fi Buttons */
    .btn-primary {
        background: linear-gradient(45deg, #00d4ff, #007bff);
        color: white;
        border: none;
        box-shadow: 0px 0px 10px #00d4ff;
        transition: 0.3s ease-in-out;
    }

        .btn-primary:hover {
            background: #007bff;
            box-shadow: 0px 0px 20px #00d4ff;
        }

    /* Neon Outline for Inputs */
    .form-control {
        background: rgba(255, 255, 255, 0.1);
        color: white;
        box-shadow: 0px 0px 5px #00d4ff;
    }

        .form-control:focus {
            background: rgba(255, 255, 255, 0.2);
            border: 1px solid #00d4ff;
            box-shadow: 0px 0px 15px #00d4ff;
        }

    /* Navigation Sidebar */
    .neon-nav .nav-link {
        color: white;
        background: rgba(0, 0, 0, 0.3);
        padding: 10px;
        border-radius: 10px;
        transition: 0.3s;
    }

        .neon-nav .nav-link:hover {
            background: rgba(0, 153, 255, 0.4);
            box-shadow: 0px 0px 10px #00d4ff;
        }

    /* Neon Titles */
    .neon-text {
        text-align: center;
        font-weight: bold;
        text-transform: uppercase;
        letter-spacing: 2px;
        color: #00d4ff;
        text-shadow: 0px 0px 15px #00d4ff;
    }

    .neon-subtitle {
        text-align: center;
        font-weight: bold;
        letter-spacing: 1px;
        color: #00d4ff;
        text-shadow: 0px 0px 10px #00d4ff;
    }

    /* Profile Container */
    .profile-container {
        max-width: 900px;
        margin: auto;
        padding: 20px;
    }


</style>
<div class="profile-container">
   
    <hr />
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9 neon-card">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
