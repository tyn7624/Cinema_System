@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container">
    <div class="row justify-content-center align-items-center">
        <form id="profile-form" method="post" class="w-100" enctype="multipart/form-data">
            <input asp-for="Input.userImage" type="hidden" />  <!-- Hidden input for existing image -->
            <input asp-for="Input.UserId" type="hidden" />

            <div class="row">
                <!-- Left Side: Profile Image & Points -->
                <div class="col-md-5 d-flex flex-column align-items-center">
                    <img id="profileImage"
                         src="@(Model.Input.userImage ?? "/images/user/clonePerson.jpg")"
                        
                         class="profile-image"
                         onclick="document.getElementById('ProfilePicture').click();" />
                    <input type="file" name="file" id="ProfilePicture" class="d-none" accept="image/*"
                           onchange="previewImage(event)">
                    <div class="point-display">Points: @Model.Input.Point</div>
                </div>

                <!-- Right Side: Profile Form -->
                <div class="col-md-7 position-relative">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="custom-input mb-3">
                        <label asp-for="Input.Fullname" class="form-label">Fullname:</label>
                        <input asp-for="Input.Fullname" class="input-line form-control" />
                    </div>

                    <div class="custom-input mb-3">
                        <label asp-for="Username" class="form-label">Username:</label>
                        <input asp-for="Username" class="input-line form-control" />
                    </div>

                    <div class="custom-input mb-3">
                        <label asp-for="Input.PhoneNumber" class="form-label">Phone Number:</label>
                        <input asp-for="Input.PhoneNumber" class="input-line form-control" />
                    </div>

                    <button id="update-profile-button" type="submit" class="btn btn-sm btn-primary position-absolute end-0">Save</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(event) {
            var output = document.getElementById('profileImage');
            output.src = URL.createObjectURL(event.target.files[0]);
            output.onload = function () {
                URL.revokeObjectURL(output.src); // Free memory
            };
        }
    </script>
}

<style>
    .profile-image {
        width: 180px;
        height: 252px;
        border-radius: 10px;
        object-fit: cover;
        cursor: pointer;
        box-shadow: 0px 0px 15px #00d4ff;
    }

    .point-display {
        margin-top: 10px;
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    .custom-input {
        display: flex;
        align-items: center;
        width: 100%;
    }

        .custom-input label {
            min-width: 120px;
            font-weight: bold;
        }

    .input-line {
        flex-grow: 1;
        border: none;
        border-bottom: 2px solid #333;
        width: 100%;
        height: 24px;
        background: none;
        outline: none;
    }

    .btn-primary {
        width: auto;
    }
</style>